            <h4 class="site_title m-0">Ders Yönetim Sistemi</h4>
        </div>
        <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
            <i class="fa fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="nav navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Anasayfa</a>
                </li>
                @if (!User.Identity.IsAuthenticated)
                {

                    <li class="nav-item">
                        <a class="nav-link text-primary" href="#" data-target="#modalOturum" data-toggle="modal">Oturum Aç</a>
                    </li>
                }
                else
                {
                    <li class="nav-item dropdown pr-1">
                        <a class="nav-link dropdown-toggle text-info" href="#" id="navbarDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Ders İşlemleri
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="Lesson/Add">Ders Ekle</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Dersleri Listele</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown pr-1">
                        <a class="nav-link dropdown-toggle text-info" href="#" id="navbarDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Kişi İşlemleri
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">Kişi Ekle</a>
